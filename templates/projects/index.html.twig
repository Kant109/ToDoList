<!DOCTYPE html>
<html lang="en">
<head>

  <!-- Basic Page Needs
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta charset="utf-8">
  <title>Your page title here :)</title>
  <meta name="description" content="">
  <meta name="author" content="">

  <!-- Mobile Specific Metas
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <!-- FONT
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link href="//fonts.googleapis.com/css?family=Raleway:400,300,600" rel="stylesheet" type="text/css">

  <!-- CSS
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="stylesheet" href="/css/normalize.css">
  <link rel="stylesheet" href="/css/skeleton.css">

  <!-- Favicon
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
  <link rel="icon" type="image/png" href="/images/favicon.png">

</head>
<body>
  <!-- Primary Page Layout
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
<div class="container">
    <div class="row">
        <div class="one-half column" style="margin-top: 25%">
            <h4>Projects</h4>
        </div>
    </div>
    <a class="button button-primary" href="/projects/add">Add project</a>
    {% for label, messages in app.flashes %}
      {% for message in messages %}
        <div class="row">
          <div class="column">
            <p>{{ message }}</p>
          </div>
        </div>
      {% endfor %}
    {% endfor %}
    {% if projects %}
        <div class="row">
            <div class="column">
                <table class="u-full-width">
                    <thead>
                        <tr>
                            <th>Name</th>
                            <th>Description</th>
                            <th>Start time</th>
                            <th>End time</th>
                            <th>Add user</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for project in projects %}
                        <tr>
                            <td>{{ project.getName }}</td>
                            <td>{{ project.getDescription }}</td>
                            <td>{{ project.getStartDate|date("d M Y") }}</td>
                            <td>{{ project.getEndDate|date("d M Y") }}</td>
                            <td><a class="button button-primary" href="/projects/{{ project.getId }}/user">User</a></td>
                            <td><a class="button button-primary" href="/projects/edit/{{ project.getId }}">Edit</a></td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    {% endif %}
    <a class="button button-primary" href="/users">Users</a>
</div>
<!-- End Document
  –––––––––––––––––––––––––––––––––––––––––––––––––– -->
</body>
</html>
